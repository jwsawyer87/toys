#! /usr/bin/python -u

import sys
import json
import getopt
import os.path
import subprocess

def syntax(s=None):
  if s:
    sys.stderr.write("%s\n" % s)
  if isSSH:
    sys.stderr.write("Syntax: %s [-q|--quiet] [-v|--verbose] [--only name,name,...] [--not name,name,...] cmd [arg ...]\n" % sys.argv[0])
  elif isSCP:
    sys.stderr.write("Syntax: %s [-q|--quiet] [-v|--verbose] [--only name,name,...] [--not name,name,...] src1 [src2 ...] dest\n" % sys.argv[0])
  else:
    sys.stderr.write("WTF!  %s is not an ssh or scp command?  What are you doing, dude???\n")
  exit(1)

isSSH = False
isSCP = False

if "ssh" in sys.argv[0]:
  isSSH = True
elif "scp" in sys.argv[0]:
  isSCP = True
else:
  syntax()

verbose = False
quiet = False
(opts,args) = ([], [])
try:
  (opts,args) = getopt.getopt(sys.argv[1:], "vqo:n:", ["verbose", "quiet", "only=", "not="])
except Exception as e:
  syntax(str(e))

onlyList = []
notList = []

for (opt, arg) in opts:
  if opt in ["-q", "--quiet"]:
    quiet = not quiet
  elif opt in ["-v", "--verbose"]:
    verbose = not verbose
  elif opt in ["-o", "--only"]:
    onlyList = arg.split(",")
  elif opt in ["-n", "--not"]:
    notList = arg.split(",")
  else:
    sys.stderr.write("Unexpected argument: `%s`\n" % opt)
    syntax()

if onlyList and notList:
  syntax("--only and --not are mutually exclusive")

hosts = None

pgm = sys.argv[0]
if pgm[-3:] == ".py":
  pgm = pgm[:-3]

jsonFile = pgm + ".json"
if verbose:
  print "opening %s" % jsonFile

with open(jsonFile, 'r') as f:
  hosts = json.load(f)

if verbose:
  print "Hosts: %s" % hosts

if len(args) < (1 if isSSH else 2):
  syntax("Only %d arguments" % len(args))

for host in hosts:

  if ((not onlyList) and (not notList)) or (onlyList and (host["name"] in onlyList)) or (notList and (host["name"] not in notList)):
    if isSSH:
      if not quiet:
        print "%s" % (host["name"])
      cmd = args
  
    else:
      for src in args[:-1]:
        if not quiet:
          print "%s @ %s" % (src, host["name"])
  
          cmd = [src, "%s@%s:%s" % (host["user"], host["host"], args[-1])]
  
    if isSSH:
      cmd = ["%s@%s" % (host["user"], host["host"])] + cmd
  
    if "key" in host:
      cmd = ["-i", host["key"]] + cmd
  
    cmd = ["-o", "LogLevel=quiet"] + cmd
  
    cmd = ["ssh" if isSSH else "scp"] + cmd
  
    if verbose:
      print cmd
  
    p = subprocess.Popen(cmd, stdout=subprocess.PIPE, stderr=subprocess.PIPE)
    (stdout, stderr) = p.communicate()
    rc = p.wait()
    if stderr or (rc != 0):
      sys.stdout.write(stdout)
      sys.stderr.write(stderr)
    elif verbose:
      sys.stderr.write("rc=%d, `%s`, `%s`\n" % (rc, repr(stdout.strip('\n')), repr(stderr.strip('\n'))))
    else:
      sys.stdout.write(stdout)
